.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  padding: 30rpx;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
}

.title-section {
  text-align: center;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 卡片通用样式 */
.card {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.card-header {
  padding: 30rpx 30rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.card-content {
  padding: 24rpx 30rpx 30rpx;
}

/* 谜题内容 */
.puzzle-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

/* 输入区域 */
.observation-input {
  width: 100%;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
}

.observation-input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.char-count {
  text-align: right;
  margin-top: 16rpx;
}

.char-count text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 提交按钮 */
.submit-section {
  margin: 60rpx 0 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.button-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 30rpx 0;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}