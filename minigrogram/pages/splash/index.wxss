/* 重置页面默认边距 */
page {
  margin: 0;
  padding: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #0a0e17;
}

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.universeBackground {
  width: 100%;
  height: 100%;
  position: relative;
  background: 
    radial-gradient(ellipse at center, #1a2238 0%, #0f1420 40%, #0a0e17 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 120rpx 40rpx 80rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 星空背景效果 */
.stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(2px 2px at 20% 30%, #fff, transparent),
    radial-gradient(2px 2px at 40% 70%, #fff, transparent),
    radial-gradient(1px 1px at 60% 20%, #fff, transparent);
  background-size: 200px 200px;
}

/* 中心星系 */
.galaxyCenter {
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.core {
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, #4a5568, #2d3748, #1a202c);
  border-radius: 50%;
  position: relative;
  z-index: 1;
}

/* 星座样式 */
.constellation {
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
}

.star {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
}

.star1 { top: 20%; left: 30%; }
.star2 { top: 40%; left: 70%; }
.star3 { top: 60%; left: 20%; }
.star4 { top: 70%; left: 60%; }
.star5 { top: 30%; left: 50%; }
.star6 { top: 50%; left: 30%; }
.star7 { top: 65%; left: 80%; }

/* 主要品牌区域 */
.mainBrand {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  z-index: 10;
}

.chineseTitle {
  display: flex;
  margin-bottom: 30rpx;
}

.titleChar {
  font-size: 72rpx;
  font-weight: bold;
  color: #e2e8f0;
  margin: 0 8rpx;
}

.englishTitle {
  font-size: 36rpx;
  font-weight: 300;
  color: #cbd5e0;
  letter-spacing: 6rpx;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #a0aec0;
  text-align: center;
  line-height: 1.6;
}

/* 加载区域 */
.loadingSection {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
  z-index: 10;
}

.loadingDots {
  display: flex;
  margin-bottom: 30rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #667eea;
  margin: 0 10rpx;
}

.dot1 { animation: bounce 1.4s ease-in-out infinite both; }
.dot2 { animation: bounce 1.4s ease-in-out 0.2s infinite both; }
.dot3 { animation: bounce 1.4s ease-in-out 0.4s infinite both; }

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% { 
    transform: scale(1.2);
    opacity: 1;
  }
}

.loadingText {
  font-size: 28rpx;
  color: #e2e8f0;
}

/* 底部信息 */
.bottomInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.versionText {
  font-size: 22rpx;
  color: #718096;
  margin-bottom: 20rpx;
}

.quote {
  font-size: 24rpx;
  color: #a0aec0;
  text-align: center;
  line-height: 1.5;
  max-width: 80%;
}